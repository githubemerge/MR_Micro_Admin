<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout_header_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="5dp">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_assing_products"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/textview_rep_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp" />

        <emerge.project.mrsolution_admin_micro.ui.fonts.MontserratMedium
            android:id="@+id/textview_rep_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Hashan Galagedara"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/relativelayout_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_rep"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_profile_users"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#be8d3f"
                app:civ_shadow_radius="1" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>


