<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_background">


        <RelativeLayout
            android:id="@+id/relativelayout_reps"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <emerge.project.mrsolution_admin_micro.ui.fonts.MontserratMedium
                android:id="@+id/montserratMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="REP"
                android:textColor="@color/colorPrimaryDark" />


            <ImageView
                android:id="@+id/imageView_rep_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_search_black" />

            <emerge.project.mrsolution_admin_micro.ui.fonts.MontserratRegularAutoComlete
                android:id="@+id/autoCompleteTextView_rep"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toStartOf="@+id/imageView_rep_search"
                android:layout_toLeftOf="@+id/imageView_rep_search"
                android:layout_toEndOf="@+id/montserratMedium"
                android:layout_toRightOf="@+id/montserratMedium"
                android:hint="Search Reps"
                android:paddingLeft="10dp"
                android:textColorHint="@color/colorHint"
                android:textSize="14sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_rep"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_below="@+id/relativelayout_reps"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp" />


        <emerge.project.mrsolution_admin_micro.ui.fonts.MontserratMedium
            android:id="@+id/montserratMedium2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview_rep"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Principles"
            android:textColor="@color/colorPrimaryDark" />


        <emerge.project.mrsolution_admin_micro.ui.fonts.MontserratMedium
            android:id="@+id/montserratMedium4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview_principles"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Products"
            android:textColor="@color/colorPrimaryDark" />


        <emerge.project.mrsolution_admin_micro.ui.fonts.MontserratRegularButton
            android:id="@+id/btn_assign"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/recyclerview_user_assign_products"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bg_selector_gold"
            android:text="@string/assign"
            android:textColor="@color/colorPrimaryDark" />


        <emerge.project.mrsolution_admin_micro.ui.fonts.MontserratMedium
            android:id="@+id/montserratMedium5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview_products"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Assing Products"
            android:textColor="@color/colorPrimaryDark" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_user_assign_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/montserratMedium5"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_products"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/montserratMedium4"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_principles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/montserratMedium2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp" />

    </RelativeLayout>






</android.support.v4.widget.DrawerLayout>